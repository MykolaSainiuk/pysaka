{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "./",
    "outDir": "./dist/cjs",
    "baseUrl": "./",
    "incremental": false,
    "types": [ "node" ],
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.mjs",
    "src/**/*.cjs",
  ],
  "exclude": [
    "test",
    "node_modules",
    "dist",
    "__temp"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
}

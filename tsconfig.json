{
  "ts-node": {
      "esm": true,
      "compiler": "typescript",
      "experimentalSpecifierResolution": "node",
      "transpileOnly": true,
  },
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,
    "types": [ "node" ],
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.mjs",
    "src/**/*.cjs",
    "tests/**/*.ts",
    "tests/**/*.js",
    "tests/**/*.mjs",
    "tests/debug.cjs",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__temp"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
}

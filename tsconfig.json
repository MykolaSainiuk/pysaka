{
  "ts-node": {
      "esm": true,
      "compiler": "typescript",
      "experimentalSpecifierResolution": "node",
      "transpileOnly": true,
  },
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,
    "types": [ "node" ],
    "allowJs": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "tests/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}

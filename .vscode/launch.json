{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "tests/debug.ts",
            "skipFiles": ["<node_internals>/**", "node_modules/**"],
            "sourceMaps": true,
            "stopOnEntry": false,
            // "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-esm",
            // "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/tests/debug.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "env": {
                "NODE_OPTIONS": "--loader ts-node/esm",
                "NODE_NO_WARNINGS": "1"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true,
            "showAsyncStacks": true,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "tests/debug.mjs",
            "skipFiles": ["<node_internals>/**", "node_modules/**"],
            "sourceMaps": true,
            "stopOnEntry": false,
            // "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-esm",
            // "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/tests/debug.mjs",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true,
            "showAsyncStacks": true,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "tests/index.ts",
            "skipFiles": ["<node_internals>/**", "node_modules/**"],
            "program": "${workspaceFolder}/dist/tests/index.js",
            // "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true,
            "showAsyncStacks": true,
            "sourceMaps": true,
        }
    ]
}